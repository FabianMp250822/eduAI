rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /licenses/{licenseId} {
      allow get: if true;
      allow update: if request.resource.data.currentInstalls == resource.data.currentInstalls + 1
                       && request.resource.data.currentInstalls <= resource.data.maxInstalls
                       || (request.resource.data.points > resource.data.points);
      allow create, delete: if false;
    }

    match /actions/{actionId} {
      // Allow creating an action if the licenseKey in the new document exists in the 'licenses' collection.
      allow create: if exists(/databases/$(database)/documents/licenses/$(request.resource.data.licenseKey));
      allow read, update, delete: if false;
    }

    match /ai_content/{contentId} {
       // Allow creating content if the licenseKey in the new document exists in the 'licenses' collection.
      allow create: if exists(/databases/$(database)/documents/licenses/$(request.resource.data.licenseKey));
      allow read, update, delete: if false;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
