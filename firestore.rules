rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the main licenses collection
    match /licenses/{licenseId} {
      
      // Allow anyone to read a specific license document to validate it.
      allow get: if true;

      // Allow updates only under two specific conditions:
      // 1. Incrementing 'currentInstalls' by exactly 1, without exceeding 'maxInstalls'.
      // 2. Incrementing the 'points' field (a simple check for gamification).
      allow update: if (request.resource.data.currentInstalls == resource.data.currentInstalls + 1
                       && request.resource.data.currentInstalls <= resource.data.maxInstalls)
                       || (request.resource.data.points > resource.data.points);
                         
      // Disallow creating or deleting licenses from the client application.
      allow create, delete: if false;

      // Rules for subcollections within a license document
      match /{subcollection}/{docId} {
        // Allow clients to create documents in the 'actions' and 'ai_generated_content'
        // subcollections, associated with their license.
        allow create: if subcollection == 'actions' || subcollection == 'ai_generated_content';
        
        // Disallow reading, updating, or deleting subcollection documents from the client.
        allow read, update, delete: if false;
      }
    }
  }
}
